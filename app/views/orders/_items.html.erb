<table class="bottomBorder">
    <thead>
        <tr>
            <td>Product</td>
            <td>Quantity</td>
            <td>Total</td>
        </tr>
    </thead>
    <tbody>
    <% order.order_items.each do |item| %>
        <tr>
        <td><%= item.ordered_item.full_name %><%= image_tag item.ordered_item.default_image.path, :class=>"order_image"%></td>
        <td id ='qt'><%= item.quantity %></td>
        <td><%= number_to_currency item.ordered_item.price %></td>
    </tr>
<% end %>

    </tbody>

    <tfoot>
        <tr>
            <td colspan='2'>Total</td>
            <td><%= number_to_currency order.total %></td>
        </tr>
    </tfoot>
</table>
